<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.android.rocketlaunchtracker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="hu.bme.aut.android.rocketlaunchtracker.RocketLaunchTrackerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_rocket_launch"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rocket_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.RocketLaunchTracker">
        <activity android:name=".ui.launchtracking.LaunchTrackingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.upcominglaunches.UpcomingLaunchesActivity" />
        <activity android:name=".ui.about.AboutActivity" />
    </application>

</manifest>